<div class="container-fluid">
	<h2 class="title">Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  	<%= devise_error_messages! %>

	  <div class="field">
	    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "sm-forms submit" %>
	  </div>

	  	<div class="actions">
	    	<%= f.submit "Send me reset password instructions", :class => "btn btn-semi-mini submit" %>
		</div>
	<% end %>

	<%= link_to "Login", new_user_session_path, class: "btn btn-semi-mini submit" %>
	<%= link_to "RSVP", new_user_registration_path, class: "btn btn-semi-mini submit" %>
	<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn-semi btn submit" %>
</div>