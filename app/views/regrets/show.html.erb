<div class="container-fluid">
	<h1 class="title"><%= @regret.user.name %> said:</h1>
	<div class="panel panel-default">
		<div class="panel-body panel-turq">
			<%= simple_format(@regret.message) %>
		</div>
		<div class="panel-footer panel-turq">
			<div class="btn-group">
				<% if current_user.id == @regret.user.id %>
					<%= link_to 'Edit', edit_regret_path(@regret), class: "btn btn-default" %>
				<% end %>
				<%= link_to 'Back', regrets_path, class: "btn btn-default" %>
			</div>
		</div>
	</div>
</div>